<aura:component controller="CampingListController">
    <aura:handler name="init" action="{!c.doInit}" value="{!this}"/>
    <aura:attribute name="items" type="Camping_Item__c[]"/>
    <lightning:card title="Items">
        <p class="slds-p-horizontal_small">
            <aura:iteration items="{!v.items}" var="item">
                <c:CampingListItem item="{!v.item}"/>
            </aura:iteration>
        </p>
    </lightning:card>
    <aura:attribute name="newItem" type="Camping_Item__c"
    default="{ 'sobjectType': 'Camping_Item__c',
                   'Name': '',
                   'Quantity__c': 0,
                   'Price__c': 0,
                   'Packed__c': false }"/>
    

        <!-- NEW EXPENSE FORM -->
    <lightning:layout>
        <lightning:layoutItem padding="around-small" size="6">
                    <!-- CREATE NEW EXPENSE -->
            <div aria-labelledby="campingitemsform">
                <!-- BOXED AREA -->
                <fieldset class="slds-box slds-theme_default slds-container_small">
                <legend id="campingitemsform" class="slds-text-heading_small
                slds-p-vertical_medium">
                Add Camping Item
                </legend>
                <!-- CREATE NEW EXPENSE FORM -->
                <form class="slds-form_stacked">
                    <lightning:input aura:id="campingitemsform" label="Name"
                                    name="Name"
                                    value="{!v.newItem.Name}"
                                    required="true"/>
                    <lightning:input type="number" aura:id="campingitemsform" label="qantity"
                                    name="quantity"
                                    min="1"
                                    value="{!v.newItem.Quantity__c}"
                                    messageWhenRangeUnderflow="Enter quantity of the item."/>
                    <lightning:input type="number" aura:id="campingitemsform" label="price"
                                    name="price"
                                    min="0.1"
                                    formatter="currency"
                                    step="0.01"
                                    value="{!v.newItem.Price__c}"
                                    messageWhenRangeUnderflow="Enter an amount that's at least $0.10."/>
                   
                    <lightning:input type="checkbox" aura:id="campingitemsform" label="Packed?"
                                    name="packed"
                                    checked="{!v.newItem.Packed__c}"/>
                    <lightning:button label="Create Camping Item"
                                    class="slds-m-top_medium"
                                    variant="brand"
                                    onclick="{!c.clickCreateItem}"/>
                </form>
                <!-- / CREATE NEW EXPENSE FORM -->
            </fieldset>
            <!-- / BOXED AREA -->
            </div>
            <!-- / CREATE NEW EXPENSE -->
        </lightning:layoutItem>
    </lightning:layout>
    <!-- / NEW EXPENSE FORM -->
</aura:component>	
